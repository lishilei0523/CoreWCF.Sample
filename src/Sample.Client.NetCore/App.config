<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!--SD.IOC配置节点-->
    <section name="sd.ioc" type="SD.IOC.Core.DependencyInjectionSection, SD.IOC.Core" />
    <!--WCF配置节点-->
    <section name="system.serviceModel" type="System.ServiceModel.ServiceModelSection, System.ServiceModel.NetCore" />
  </configSections>

  <!--SD.IOC配置-->
  <sd.ioc>
    <!--WCF接口列表-->
    <wcfInterfaces>
      <assembly name="Sample.IAppService" />
    </wcfInterfaces>
  </sd.ioc>

  <!--WCF配置-->
  <system.serviceModel>
    <!--WCF客户端配置，手动增加endpoint节点-->
    <client>
      <!--单据服务契约配置-->
      <!--<endpoint address="http://localhost:4071/Hosts/OrderContract.svc" binding="basicHttpBinding" contract="Sample.IAppService.Interfaces.IOrderContract" name="Sample.IAppService.Interfaces.IOrderContract">
      </endpoint>-->
      <endpoint address="net.tcp://localhost:40710/Hosts/OrderContract.svc" binding="netTcpBinding" contract="Sample.IAppService.Interfaces.IOrderContract" name="Sample.IAppService.Interfaces.IOrderContract">
      </endpoint>
    </client>
  </system.serviceModel>
</configuration>
